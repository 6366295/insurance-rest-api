<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="nl.harvest.insurance.database.entitymanager">
        <description>Hibernate EntityManager</description>
        <class>nl.harvest.insurance.database.Customer</class>
        <class>nl.harvest.insurance.database.Product</class>
        <class>nl.harvest.insurance.database.Application</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://pg:5432/docker"/>
            <property name="javax.persistence.jdbc.user" value="docker"/>
            <property name="javax.persistence.jdbc.password" value="docker"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
